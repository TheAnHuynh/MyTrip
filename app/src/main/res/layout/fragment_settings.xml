<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_settings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color">

    <View
        android:id="@+id/vertical_line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white_greyish"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txtCurrentUserInfo"
        android:text="@string/userInfo"
        style="@style/fragmentTextViewStyle"
        android:background="@drawable/fragment_custom_textview_selector"
        app:layout_constraintTop_toBottomOf="@id/vertical_line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <View
        android:id="@+id/vertical_line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white_greyish"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtCurrentUserInfo"/>

</FrameLayout>